<!DOCTYPE html>
<html>
    <head>
        <title>{ifset #title}{include title|striptags} | {/ifset}{$pageSettings->name}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="
			  {ifset #description}
				  {include description|striptags|truncate:500}
			  {else}
				  {$pageSettings->description}
			  {/ifset}
			  ">
        <!-- jQuery -->
        <script src="{$basePath}/bower/jquery/dist/jquery.js"></script>
		<script src="{$basePath}/bower/jquery-ui/jquery-ui.js"></script>
        <link rel="stylesheet" href="{$basePath}/js/jquery-ui/jquery-ui.css" type="text/css" media="screen" />

        <!-- extended -->
        <script src="{$basePath}/js/lightbox.min.js" type="text/javascript"></script>

        <!-- nette -->
        <script src="{$basePath}/js/netteForms.js"></script>

        <!-- bootstrap -->
        <script src="{$basePath}/bower/bootstrap/dist/js/bootstrap.min.js"></script>

        <!-- font awesome -->
        <link rel="stylesheet" media="all" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

        <!-- custom -->
        <script src="{$basePath}/js/main.js"></script>
        <script src="{$basePath}/js/front.js"></script>

        <link rel="shortcut icon" href="{$basePath}/img/icon.ico">

		{control googleAnalytics}
		{control googleTagManager, 'position'=>'header'}
		{control loadFrontStyle}
		{control customCss}
		{control customJs}
    </head>

    <body>
		{control googleTagManager, 'position'=>'body'}
		{include bodyContent}
    </body>
</html>
